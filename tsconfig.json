{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"],
      "data/*": ["src/data/*"],
      "images/*": ["src/images/*"]
    }
  },
  "include": ["./src/**/*"]
}
